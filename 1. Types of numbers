// Но я старалась, потому что очень хочу к вам на курсы :)

// В моей программе есть белое пятно, а именно - проверка делимости
// на простые числа, возведенные в степени. Программа сочет их простыми,
// и не проверит их на делимость 11, 13, 17 и т.д. — простых чисел больше 10.

import java.util.Scanner;
public class Main {

    public static void main(String[] args) {
        // создаём объект класса Scanner
        Scanner sc = new Scanner(System.in);
        int i = 0;
        System.out.print("Введите целое число: ");
        if (sc.hasNextInt()) { // возвращает true, если введено целое число в диапазоне int
            i = sc.nextInt(); // считывает целое число из ввода и сохраняет в переменную

            // Проверяем на чётность или нечётность
            if (i == 0) {
                System.out.println("Число 0 не является чётным или нечётным, простым или составным");
            }
            else if (i == 2) {
                System.out.println("Число 2 чётное и простое");
            }
            else if (i%2 == 0){
                System.out.println("Число" + " " + i + " " + "чётное и составное"); //Чётные числа уже составные
            } else {
                System.out.println("Число" + " " + i + " " + "нечётное");

                // Проверяем нечётные числа — они простые или составные
                if (i == 1 || i == 3 || i == 5 || i == 7){
                    System.out.println("Число" + " " + i + " " + "простое");
                }
                else if (i%3 == 0 || i%5 == 0 || i%7 == 0){ // Нет других простых чисел в диапазоне 11 <= i <= 46337
                    System.out.println("Число" + " " + i + " " + "составное");}
                else {
                    System.out.println("Число" + " " + i + " " + "простое");}
                }
            }

        // Если i - дробное число, не входит в диапазон int или содержит посторонние символы
        else {
            System.out.println("Ошибка ввода. Возможные причины:");
            System.out.println("1. Вы ввели дробное число");
            System.out.println("2. Число вне диапазона int (т.е. больше 2 147 483 647 или меньше -2 147 483 648)");
            System.out.println("3. Вы ввели недопустимые символы");
            System.out.println("Попробуйте снова.");

        }

    }
}
